{
	"name": "@piggly/pgly-wps-settings",
	"version": "0.2.7",
	"description": "A CSS/JS webkit to Wordpress Plugin Settings",
	"main": "dist/umd/pgly-wps-settings.js",
	"browser": "dist/umd/pgly-wps-settings.js",
	"module": "dist/esm/index.js",
	"unpkg": "dist/umd/pgly-wps-settings.min.js",
	"types": "dist/types/index.d.ts",
	"scripts": {
		"ts:check": "tsc --noEmit",
		"ts:check-watch": "npm run ts:check -- --watch",
		"ts:build": "tsc --emitDeclarationOnly",
		"js:umd": "rimraf ./dist/umd && rollup -c",
		"js:cjs": "rimraf ./dist/cjs && tsc --module commonjs --outDir ./dist/cjs",
		"js:esm": "rimraf ./dist/esm && tsc --module ESNext --outDir ./dist/esm",
		"js:watch": "rimraf ./public/assets/js && rollup -c rollup.config.dev.js -w",
		"js:deploy": "npm run js:umd && npm run js:cjs && npm run js:esm",
		"dev:start": "sirv public --port 3000 --host 0.0.0.0 --dev",
		"css:build": "npm run css:build-sass && npm run css:build-autoprefix && npm run css:build-cleancss",
		"css:build-autoprefix": "postcss --use autoprefixer --map false --output dist/css/pgly-wps-settings.css dist/css/pgly-wps-settings.css",
		"css:build-cleancss": "cleancss -o dist/css/pgly-wps-settings.min.css dist/css/pgly-wps-settings.css",
		"css:build-sass": "sass --style expanded src/scss/global.scss dist/css/pgly-wps-settings.css",
		"css:clean": "rimraf ./dist/css",
		"css:deploy": "npm run css:clean && npm run css:build",
		"css:watch": "rimraf ./public/assets/css && sass --watch --style expanded src/scss/global.scss public/assets/css/pgly-wps-settings.css",
		"lint": "eslint --ext .ts,.js --ignore-path .gitignore --fix src/js",
		"format": "prettier --write \"src/js/**/*.ts\"",
		"build": "npm run format && npm run lint && npm run css:deploy && npm run js:deploy",
		"prepare": "npm run build",
		"preversion": "npm run build",
		"version": "npm run format"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/piggly-dev/pgly-wps-settings.git"
	},
	"author": {
		"name": "Caique Araujo",
		"email": "caique@piggly.com.br",
		"url": "https://github.com/caiquearaujo"
	},
	"license": "MIT",
	"devDependencies": {
		"@babel/cli": "^7.14.8",
		"@babel/core": "^7.15.0",
		"@babel/plugin-proposal-class-properties": "^7.14.5",
		"@babel/plugin-proposal-object-rest-spread": "^7.14.7",
		"@babel/plugin-proposal-private-methods": "^7.18.6",
		"@babel/plugin-proposal-private-property-in-object": "^7.18.6",
		"@babel/plugin-transform-arrow-functions": "^7.18.6",
		"@babel/plugin-transform-classes": "^7.19.0",
		"@babel/plugin-transform-runtime": "^7.18.10",
		"@babel/plugin-transform-spread": "^7.19.0",
		"@babel/preset-env": "^7.15.0",
		"@babel/preset-typescript": "^7.15.0",
		"@babel/register": "^7.15.3",
		"@lopatnov/rollup-plugin-uglify": "^2.1.5",
		"@rollup/plugin-babel": "^5.3.1",
		"@rollup/plugin-commonjs": "^22.0.2",
		"@rollup/plugin-json": "^4.1.0",
		"@rollup/plugin-node-resolve": "^14.0.1",
		"@rollup/plugin-typescript": "^8.5.0",
		"@types/axios": "^0.14.0",
		"@types/node": "^16.6.1",
		"@typescript-eslint/eslint-plugin": "^5.37.0",
		"@typescript-eslint/parser": "^5.37.0",
		"autoprefixer": "^9.8.6",
		"babel-loader": "^8.2.2",
		"clean-css-cli": "^5.3.3",
		"eslint": "^8.23.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.2.1",
		"postcss-cli": "^8.3.1",
		"postcss-preset-env": "^6.7.0",
		"prettier": "^2.7.1",
		"rimraf": "^2.7.1",
		"rollup": "^2.79.0",
		"rollup-plugin-livereload": "^2.0.5",
		"sass": "^1.37.5",
		"sirv-cli": "^2.0.2",
		"ts-loader": "^9.3.1",
		"tslib": "^2.4.0",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"@babel/runtime": "^7.18.9",
		"axios": "^0.21.1",
		"qs-stringify": "^1.2.1"
	}
}
